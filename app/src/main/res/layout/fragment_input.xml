<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input the Following :" />

        <!--<EditText-->
        <!--android:id="@+id/ipaddress"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:ems="10"-->
        <!--android:hint="IP Address"-->
        <!--android:inputType="textPersonName" />-->

        <!--<EditText-->
        <!--android:id="@+id/port"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:ems="10"-->
        <!--android:hint="Port"-->
        <!--android:inputType="number" />-->

        <Spinner
            android:id="@+id/srcInput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <!--<EditText-->
            <!--android:id="@+id/srcInput"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ems="10"-->
            <!--android:hint="Source"-->
            <!--android:inputType="textPersonName" />-->

        <Spinner
            android:id="@+id/destInput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <!--<EditText-->
            <!--android:id="@+id/destInput"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ems="10"-->
            <!--android:hint="Destination"-->
            <!--android:inputType="textPersonName" />-->

        <EditText
            android:id="@+id/thresholdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Threshold"
            android:inputType="numberDecimal"
            android:autofillHints=""
            tools:targetApi="o" />

        <EditText
            android:id="@+id/jumlahstpInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="K"
            android:inputType="number"
            android:autofillHints=""
            tools:targetApi="o" />

        <Switch
            android:id="@+id/tagSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tags" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
        <TextView
            android:id="@+id/minSeekerValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="Tags Scale : 50"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/maxSeekerValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="Distance Scale : 50"
            android:visibility="gone"
            tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/tagDistanceSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:progressTint="@android:color/transparent"
            android:visibility="gone" />

        <EditText
            android:id="@+id/tagArray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tags, e.g., restaurant, biosolar"
            android:inputType="textPersonName"
            android:visibility="gone"
            android:autofillHints=""
            tools:targetApi="o" />

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />

        <TextView
            android:id="@+id/textAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>